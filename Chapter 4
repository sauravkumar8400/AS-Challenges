# 5

import turtle

def drawsquare(t,sz):
    for i in range(1):
        t.forward(sz)
        t.right(92)
        # Make it 90 / 92

wn = turtle.Screen()
wn.bgcolor("light green")

Choo = turtle.Turtle()
Choo.color("magenta")
Choo.pensize(3)
i = 0
w = 1

while i < 100:
    w = w + 4
    drawsquare(Choo,w)

    i = i +1

wn.mainloop()

