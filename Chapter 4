#4

import turtle

def drawsquare(t,sz):
    for i in range(4):
        t.forward(sz)
        t.right(90)

wn = turtle.Screen()
wn.bgcolor("light green")

Choo = turtle.Turtle()
Choo.color("pink")
Choo.pensize(3)
i = 0

while i < 20:
    drawsquare(Choo,50)
    Choo.penup()
    Choo.right(18)
    Choo.pendown()
    i = i +1

wn.mainloop()

