# 9 - 10

import turtle

def drawstar(t,sz):
    for i in range(5):
        t.forward(sz)
        t.right(144)

wn = turtle.Screen()
wn.bgcolor("light green")

Choo = turtle.Turtle()
Choo.color("magenta")
Choo.pensize(3)
i = 0

while i < 5:
    drawstar(Choo,40)
    Choo.penup()
    Choo.forward(350)
    Choo.right(144)
    Choo.pendown()
    i = i +1

wn.mainloop()
