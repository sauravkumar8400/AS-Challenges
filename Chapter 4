# 6

import turtle

def drawequilateral(t,sz):
    for i in range(3):
        t.forward(sz)
        t.right(120)

wn = turtle.Screen()
wn.bgcolor("light green")

Choo = turtle.Turtle()
Choo.color("magenta")
Choo.pensize(3)
i = 0

while i < 2:
    drawequilateral(Choo,40)

    i = i +1

wn.mainloop()

